{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Tiny server build",
            "type": "shell",
            "command": "cd ${workspaceFolder}/webproxy-lab/tiny && make",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/webproxy-lab/tiny"
            }
        },
        {
